<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/DialogTheme"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <com.github.abdularis.civ.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/icon_user_default"
                    app:strokeColor="@color/colorPrimary"
                    app:strokeWidth="6dp" />

                <TextView
                    android:id="@+id/tv_name"
                    fontPath="fonts/Roboto-Medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimary"
                    tools:text="João Victor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_speech_bubble"
                android:orientation="horizontal"
                android:paddingBottom="25dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="25dp">

                <TextView
                    android:id="@+id/tv_message"
                    fontPath="fonts/Roboto-Medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:text="Olá João, Você poderia me da uma carona ?" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/body_step_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_border_circle_ali"
                android:padding="15dp"
                android:textSize="12sp"
                tools:text="30 segundos" />

            <ImageView
                android:id="@+id/img_positive"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="35dp"
                android:layout_toStartOf="@+id/img_negative"
                android:src="@drawable/positive_joia_icon" />

            <ImageView
                android:id="@+id/img_negative"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/negative_joia_icon" />


        </RelativeLayout>

        <Button
            android:id="@+id/btn_see_profile"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_border_circle_ref"
            android:text="@string/visualizar_perfil" />
    </LinearLayout>


</android.support.v7.widget.CardView>