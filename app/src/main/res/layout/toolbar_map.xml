<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-10dp"
    android:background="@drawable/gradient_route_map"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="20dp"
    app:contentInsetEnd="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetStart="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/toolbar_back"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:padding="7dp"
            android:src="@drawable/back"
            android:tint="@color/cinzaPataDeElefanteQuaseBranco" />

        <LinearLayout
            android:id="@+id/ll_body_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/titulos"
                fontPath="fonts/Roboto-Medium.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:elevation="10dp"
                android:text=""
                android:textColor="@color/cinzaPataDeElefanteQuaseBranco"
                android:textSize="16sp"
                tools:text="JoÃ£o Felipe" />

            <com.github.abdularis.civ.CircleImageView
                android:id="@+id/img_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/icon_user_default"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="4dp" />
        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.Toolbar>