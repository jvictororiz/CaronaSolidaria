<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cinzaPataDeElefanteQuaseBranco"
    tools:context="br.com.joaoapps.faciplac.carona.view.activity.AlunosPreCadastradosActivity">


    <include layout="@layout/toolbar_search_filter" />

    <android.support.v7.widget.RecyclerView
        tools:listitem="@layout/item_alunos"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>


    <TextView
        android:id="@+id/tv_empty"
        android:text="@string/nenhum_aluno_encontrado"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
