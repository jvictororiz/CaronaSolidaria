<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_body"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_blue_radius"
    android:orientation="horizontal"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_type_location"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:text="Localização da casa de joão" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/cinzaLetra"
            android:text="Bairro do leste fds afasdfdsaf f dsa..." />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_body_field"
        android:layout_width="53dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_pin_agrupamento"
        android:backgroundTint="@color/colorAccentWhite"
        android:gravity="top|center"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="4dp"
        android:paddingRight="5dp"
        android:paddingBottom="16dp">


        <android.support.v7.widget.CardView
            android:id="@+id/cv_cont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="27dp">

            <ImageView
                android:src="@drawable/icon_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>