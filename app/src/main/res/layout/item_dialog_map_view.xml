<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_dialog_view_map_white"
        android:elevation="2dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="32dp"
            android:layout_height="35dp"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/icon_carona" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#616161"
                tools:text="Peixe na rede Patio Brasil" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#9EA2A7"
                android:ellipsize="end"
                android:maxLines="2"
                android:lines="2"
                tools:text="Quadra 37 casa 80 marcelo de donto teste teste teste teste teste teste testest teste ttestset test es teste" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_route_map"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:translationY="-45dp">


        <RelativeLayout
            android:id="@+id/ll_body_expanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="TraÃ§ar Rota"
                android:textColor="#fff"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp"
                android:src="@drawable/ic_rota" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_body_collected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingTop="7dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:gravity="bottom"
                android:text="Detalhar"
                android:textColor="#fff"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>