<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_body"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_body_field"
        android:layout_width="43dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_pin_estabelecimento_ampliado"
        android:backgroundTint="@color/colorAccentWhite"
        android:gravity="top|center"
        android:orientation="horizontal"
        android:paddingBottom="14dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp">

        <com.github.abdularis.civ.CircleImageView
            android:id="@+id/img_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/icon_user_default"
            app:highlightColor="@color/colorPrimary"
            app:strokeColor="@color/cinzaLetra"
            app:strokeWidth="2dp" />

    </LinearLayout>
</LinearLayout>